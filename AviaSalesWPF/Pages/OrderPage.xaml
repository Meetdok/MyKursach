<Page x:Class="AviaSalesWPF.Pages.OrderPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AviaSalesWPF.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="OrderPage">

    <Grid>
        <ListView>
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Название билета"/>
                    <GridViewColumn Header="Дата"/>
                    <GridViewColumn Header="Город прибытия"/>
                    <GridViewColumn Header="Город отбытия"/>
                    <GridViewColumn Header="Компания"/>
                    <GridViewColumn Header="Самолёт"/>
                    <GridViewColumn Header="Место"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Page>
